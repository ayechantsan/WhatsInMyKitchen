<li class="list-kitchen"  style="margin-left: 10px;" id="{{name}}">
    <a href="#" onclick="settings.select_kitchen($(this).parent().attr('id'));
        $('#kitchen_change_notification_text').html('Changed kitchen : ' + settings.current_kitchen['kitchen'].name);"
       style="float: right" data-toggle="modal" data-target="#kitchen_change_notification">
        <span class="glyphicon glyphicon-ok-sign" id="settingsKitchenSelect-{{name}}" style="color:#008000"></span>
    </a>
    {{name}}
    <a href="#" onclick="$('#confirm_popup_text').html('Are you sure you want to leave {{name}}?');
            $('#confirm_popup_accept').attr('onclick', 'settings.delete_kitchen_account(\'{{name}}\')')"
       style="float: right" data-toggle="modal" data-target="#confirm_popup">
        <span class="glyphicon glyphicon-remove glyphicon-user" id="settingsDelete-{{name}}" style="color:#a94442"></span>
    </a>
    <hr/>
</li>


