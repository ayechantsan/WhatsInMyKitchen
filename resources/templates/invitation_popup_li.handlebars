<li class="list-kitchen"  style="margin-left: 10px;" id="{{name}}_popup">
    <a href="#" onclick="settings.add_kitchen('{{name}}');
            settings.delete_kitchen_invitation('{{name}}');
            settings.check_notifications();
            $('#kitchen_change_notification_text').html('Accepted invitation to {{name}}');"
            style="float: right" data-toggle="modal" data-target="#kitchen_change_notification">
        <span class="glyphicon glyphicon-ok-sign" id="kitchenInvitation-{{name}}" style="color:#008000"></span>
    </a>
    {{name}}
    <a href="#" onclick=" $('#confirm_popup_text').html('Reject invitation to {{name}}?');
            $('#confirm_popup_accept').attr('onclick', 'settings.delete_kitchen_invitation(\'{{name}}\')');
            settings.check_notifications();"
       style="float: right" data-toggle="modal" data-target="#confirm_popup">
        <span class="glyphicon glyphicon-remove glyphicon-user" id="settingsDelete-{{name}}" style="color:#a94442"></span>
    </a>
    <hr/>
</li>
